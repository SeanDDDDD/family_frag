<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sean_duan.family_frag.bottle_or_note"
    android:background="#fafaff"
    android:id="@+id/bottle_note_layout">

    <!-- TODO: Update blank fragment layout -->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.example.sean_duan.family_frag.Top_Textview
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="扔出瓶子"
            android:textColor="#000000"
            android:textSize="17sp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"

            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="100000"
            android:gravity="center">
            <ImageButton
                android:id="@+id/button_bottle"
                android:layout_width="93dp"
                android:layout_height="93dp"
                android:background="@drawable/choose_bottle"
                android:text="漂流瓶"
                android:layout_marginRight="50dp"/>

            <ImageButton
                android:background="@drawable/choose_note"
                android:id="@+id/button_note"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="便签"/>

        </LinearLayout>

        <com.example.sean_duan.family_frag.Top_Textview
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            />

        <ImageButton
            android:background="@drawable/backbutton_x"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:id="@+id/button_reback"
            android:layout_weight="1"
            android:text="X" />

    </LinearLayout>

</FrameLayout>
